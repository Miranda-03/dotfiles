[module/bspwm]
type = internal/bspwm

pin-workspaces = true
inline-mode = false

enable-click = true
enable-scroll = true
reverse-scroll = true

fuzzy-match = true

; ws-icon-[0-9]+ = label;icon
; Note that the label needs to correspond with the bspwm workspace name
ws-icon-0 = I;ÔÑ†
ws-icon-1 = II;Ô™û
ws-icon-2 = III;ÔÅº
ws-icon-3 = IV;ÔÑ°
ws-icon-4 = V;Ôáì
ws-icon-5 = VI;ÔÉ†
ws-icon-6 = VII;ÔÖ™
ws-icon-7 = VIII;ÔÄì
ws-icon-8 = IX;üéÆ
ws-icon-9 = X;ùóñùó¶
ws-icon-default = Ô°∏

format = <label-state>
format-font = 2

label-monitor = %name%

; If any values for label-dimmed-N are defined, the workspace/mode
; colors will get overridden with those values if the monitor is out of focus
; To only override workspaces in a specific state, use:
;   label-dimmed-focused
;   label-dimmed-occupied
;   label-dimmed-urgent
;   label-dimmed-empty
;label-dimmed-foreground = ${color.FOREGROUND}
;label-dimmed-underline = ${color.YELLOW}
;label-dimmed-focused-background = ${color.BACKGROUNDT}

label-focused = %name%
label-focused-foreground = ${color.RED}
label-focused-background = ${color.BACKGROUNDT}
;label-focused-underline = ${color.BLUE}
label-focused-padding = 1

label-occupied = %name%
label-occupied-foreground = ${color.ALTCYAN}
label-occupied-background = ${color.BACKGROUNDT}
;label-occupied-underline = ${color.ALTCYAN}
label-occupied-padding = 1

label-urgent = %name%
label-urgent-foreground = ${color.RED}
label-urgent-background = ${color.BACKGROUNDT}
label-urgent-underline = ${color.RED}
label-urgent-padding = 1

label-empty = %name%
label-empty-foreground = ${color.FOREGROUND}
label-empty-padding = 1

; Separator in between workspaces
label-separator = "‚àô"
label-separator-padding = 0
label-separator-foreground = ${color.ALTBLACK}

;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_

